<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dogandfox_bk3"
    tools:context=".page3">

    <TextView
        android:id="@+id/dogfox_text3"
        android:layout_width="245dp"
        android:layout_height="171dp"
        android:text="@string/dogandfox_p3_kor"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.596" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="70dp"
        android:layout_height="66dp"
        android:background="@drawable/ic_nextpage"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/replay_btn"
        android:layout_width="61dp"
        android:layout_height="64dp"
        android:background="@drawable/ic_replay"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/next_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fox_p3_btn"
        android:layout_width="63dp"
        android:layout_height="56dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/fox_ic"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lion_p3_btn"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogfox_text2"
        app:layout_constraintVertical_bias="0.468" />

    <Button
        android:id="@+id/lion_p3_btn"
        android:layout_width="63dp"
        android:layout_height="56dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/lion_ic"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogfox_text3"
        app:layout_constraintVertical_bias="0.655" />

    <Button
        android:id="@+id/eng_chg_btn"
        android:layout_width="65dp"
        android:layout_height="59dp"
        android:background="@drawable/ic_eng_chg"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>